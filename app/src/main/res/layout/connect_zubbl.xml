<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="@dimen/marginBottom"
        android:layout_marginEnd="@dimen/marginBottom"
        android:layout_marginBottom="@dimen/marginBottom"
        app:cardElevation="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_more_addzubbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="gone"
                android:padding="@dimen/marginLeft"
                android:contentDescription="@string/app_name"
                android:src="@drawable/more" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/marginLeft"
                android:paddingStart="@dimen/marginLeft"
                android:paddingEnd="@dimen/marginLeft">

                <ImageView
                    android:id="@+id/iv_logo_connectZubbl"
                    android:layout_width="@dimen/merchant_profile_width"
                    android:layout_height="@dimen/merchant_profile_height"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:layout_toEndOf="@+id/iv_logo_connectZubbl"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/name_connectZubbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSmall"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_regular" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/last_seen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textLow"
                            android:visibility="gone"
                            android:drawablePadding="@dimen/paddingTopVLow"
                            android:drawableStart="@drawable/check"
                            android:textColor="@color/login_hint_color"
                            android:fontFamily="@font/muli_regular"
                            android:paddingTop="@dimen/paddingTopLow" />
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_connectZubbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:textSize="@dimen/textVSmall"
                android:paddingTop="@dimen/marginBottom"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_regular" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_mail_connetZubbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:textSize="@dimen/textVSmall"
                android:paddingTop="@dimen/paddingTopVLow"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_regular" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/phonenumber_connectZubbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:textSize="@dimen/textVSmall"
                android:paddingTop="@dimen/paddingTopVLow"
                android:paddingBottom="@dimen/marginBottom"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_regular" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/login_hint_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/marginLeft"
                android:baselineAligned="false"
                android:layout_marginEnd="@dimen/marginLeft"
                android:layout_marginTop="@dimen/marginBottom"
                android:layout_marginBottom="@dimen/marginBottom">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_totalpoints_connetZubbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textVSmall"
                        android:textColor="@color/black"
                        android:text="@string/zero"
                        android:fontFamily="@font/muli_regular" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textVSmall"
                        android:paddingTop="@dimen/paddingTopLow"
                        android:textColor="@color/login_hint_color"
                        android:text="@string/totalpoints"
                        android:fontFamily="@font/muli_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_tap_ins_connetZubbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="@dimen/textVSmall"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_regular" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textVSmall"
                        android:paddingTop="@dimen/paddingTopLow"
                        android:textColor="@color/login_hint_color"
                        android:text="@string/tap_ins"
                        android:fontFamily="@font/muli_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/paddingLeftSmall"
                    android:background="@drawable/register_btn_background"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_points_connetZubbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textVSmall"
                        android:textColor="@color/white"
                        android:fontFamily="@font/muli_regular"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textVSmall"
                        android:paddingTop="@dimen/paddingTopLow"
                        android:drawableEnd="@drawable/up"
                        android:textColor="@color/white"
                        android:text="@string/points"
                        android:fontFamily="@font/muli_regular" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@color/login_hint_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/btn_connect_zubble"
                style="@style/commonBtnTextview"
                android:text="@string/connect"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:layout_marginTop="@dimen/marginBottom"
                android:background="@drawable/login_btn_background"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>