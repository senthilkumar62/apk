<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="@dimen/marginBottom"
        android:layout_marginEnd="@dimen/marginBottom"
        android:layout_marginBottom="@dimen/marginBottom"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_more_addzubbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="gone"
                android:padding="@dimen/marginLeft"
                android:contentDescription="@string/app_name"
                android:src="@drawable/more" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:layout_marginTop="@dimen/marginLeft">

                <ImageView
                    android:id="@+id/iv_logo_addZubbl"
                    android:layout_width="@dimen/merchant_profile_width"
                    android:layout_height="@dimen/merchant_profile_height"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:layout_toEndOf="@+id/iv_logo_addZubbl"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/name_joinZubbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSmall"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_regular" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="@dimen/paddingTopESmall"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSmall"
                            android:textColor="@color/login_hint_color"
                            android:fontFamily="@font/muli_regular"
                            android:drawableEnd="@drawable/clock"
                            android:paddingEnd="@dimen/marginLeft"
                            android:drawablePadding="@dimen/marginBottom"
                            android:paddingStart="0dp"
                            android:text="@string/zubbl" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/red"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSmall"
                            android:textColor="@color/login_hint_color"
                            android:fontFamily="@font/muli_regular"
                            android:drawableEnd="@drawable/location"
                            android:paddingEnd="@dimen/marginBottom"
                            android:drawablePadding="@dimen/marginBottom"
                            android:paddingStart="@dimen/marginLeft"
                            android:text="@string/zubbl" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_joinZubbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:textSize="@dimen/textVSmall"
                android:paddingTop="@dimen/marginBottom"
                android:paddingBottom="@dimen/marginBottom"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_regular" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@color/login_hint_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/marginLeft"
                android:layout_marginEnd="@dimen/marginLeft"
                android:layout_marginTop="@dimen/marginBottom"
                android:layout_marginBottom="@dimen/marginLeft">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_joinedmaembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_circle"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textVSmall" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_totalmembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/lock"
                    android:drawablePadding="@dimen/paddingTopVLow"
                    android:layout_toEndOf="@+id/tv_joinedmaembers"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:paddingEnd="@dimen/paddingTopVLow"
                    android:paddingStart="@dimen/paddingTopLow"
                    android:textColor="@color/login_hint_color"
                    android:textSize="@dimen/textVSmall" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/btn_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/dialog_btn_enabled"
                    android:paddingBottom="@dimen/paddingTopESmall"
                    android:paddingEnd="@dimen/marginBottomLarge"
                    android:paddingStart="@dimen/marginBottomLarge"
                    android:paddingTop="@dimen/paddingTopESmall"
                    android:text="@string/join"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSmall"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>